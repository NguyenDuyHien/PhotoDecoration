<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.AppCompatSpinner
        app:layout_constraintBottom_toTopOf="@id/edtContent"
        android:id="@+id/spinnerFonts"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_30sdp"/>

    <androidx.appcompat.widget.AppCompatEditText
        android:gravity="center_horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/spinnerFonts"
        android:id="@+id/edtContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:ems="30"
        android:inputType="textPersonName"
        android:text="Type your text" />

    <androidx.appcompat.widget.AppCompatButton
        app:layout_constraintBottom_toBottomOf="@id/spinnerFonts"
        app:layout_constraintTop_toTopOf="@id/spinnerFonts"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:text="Done" />

</androidx.constraintlayout.widget.ConstraintLayout>
